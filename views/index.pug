extends base.pug

block content
  section
    h1= 'Topics'
    div(class='topic-list')
      each topic in topics
        a(class='topic-row' href='/topics/' + topic.id)
          div
            div(class='details')
              h2= topic.name
              p= topic.description
            div(class='posts')
              span= topic.posts
  aside
    div(class='block mb')
      h2= 'Top Contributors'
      div(class='user-list')
        each user in topContributors
          a(class='user-row' href='/users/' + user.id)
            div
              div(class='avatar')
                img(src='/avatars/' + user.avatarId + '.svg')
              div(class='username')= user.username
              div(class='posts')
                span= user.posts
